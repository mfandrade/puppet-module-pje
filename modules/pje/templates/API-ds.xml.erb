<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE datasources
    PUBLIC "-//JBoss//DTD JBOSS JCA Config 1.5//EN"
    "http://www.jboss.org/j2ee/dtd/jboss-ds_1_5.dtd">
    
<datasources>
 
  <!-- API NA BASE PADRAO -->
  <xa-datasource>
    <jndi-name>PJE_API_DS</jndi-name>
    <xa-datasource-class>org.postgresql.xa.PGXADataSource</xa-datasource-class>
    <xa-datasource-property name="ServerName"><%= @ds_servername %></xa-datasource-property>
    <xa-datasource-property name="PortNumber">5432</xa-datasource-property>
    <xa-datasource-property name="DatabaseName"><%= @ds_databasename %></xa-datasource-property>
    <user-name><%= @ds_api_username %></user-name>
    <password><%= @ds_api_password %></password>
    <min-pool-size><%= @ds_api_minpoolsize %></min-pool-size>
    <max-pool-size><%= @ds_api_maxpoolsize %></max-pool-size>
    <prepared-statement-cache-size>10</prepared-statement-cache-size>
    <shared-prepared-statements>true</shared-prepared-statements>
      <idle-timeout-minutes>5</idle-timeout-minutes>
      <validate-on-match>true</validate-on-match>
    <valid-connection-checker-class-name>org.jboss.resource.adapter.jdbc.vendor.PostgreSQLValidConnectionChecker</valid-connection-checker-class-name>
    <track-connection-by-tx />
    <metadata>
      <type-mapping>PostgreSQL 8.0</type-mapping>
    </metadata>
  </xa-datasource>

  <!-- API NA BASE REPLICADA -->
  <no-tx-datasource>
    <jndi-name>PJE_API_BASE_REPLICADA_DS</jndi-name>
    <connection-url>jdbc:postgresql://<%= @ds_servername %>:5432/<%= @ds_databasename %></connection-url>
    <driver-class>org.postgresql.Driver</driver-class>
    <user-name><%= @ds_api_username %></user-name>
    <password><%= @ds_api_password %></password>
    <min-pool-size><%= @ds_api_minpoolsize %></min-pool-size>
    <max-pool-size><%= @ds_api_maxpoolsize %></max-pool-size>
    <idle-timeout-minutes>5</idle-timeout-minutes>
    <validate-on-match>true</validate-on-match>
    <valid-connection-checker-class-name>org.jboss.resource.adapter.jdbc.vendor.PostgreSQLValidConnectionChecker</valid-connection-checker-class-name>
    <metadata>
      <type-mapping>PostgreSQL 8.0</type-mapping>
    </metadata>
  </no-tx-datasource>
</datasources>

