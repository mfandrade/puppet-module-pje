<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE datasources
    PUBLIC "-//JBoss//DTD JBOSS JCA Config 1.5//EN"
    "http://www.jboss.org/j2ee/dtd/jboss-ds_1_5.dtd">
    
<datasources>

 
<!--####### BASE PJE #######-->
  <xa-datasource>
    <jndi-name>PJE_DESCANSO_DS</jndi-name>
    <xa-datasource-class>org.postgresql.xa.PGXADataSource</xa-datasource-class>
    <xa-datasource-property name="ServerName"><%= @db_server %></xa-datasource-property>
    <xa-datasource-property name="PortNumber">5432</xa-datasource-property>
    <xa-datasource-property name="DatabaseName"><%= @db_name %></xa-datasource-property>
    <user-name><%= @username_pje %></user-name>
    <password><%= @password_pje %></password>
    <!-- Connection Pool Tuning -->
    <min-pool-size><%= @minpoolsize_pje %></min-pool-size>
    <max-pool-size><%= @maxpoolsize_pje %></max-pool-size>
    <prepared-statement-cache-size>10</prepared-statement-cache-size>
    <shared-prepared-statements>true</shared-prepared-statements>
    <idle-timeout-minutes>5</idle-timeout-minutes>
    <validate-on-match>true</validate-on-match>
    <valid-connection-checker-class-name>org.jboss.resource.adapter.jdbc.vendor.PostgreSQLValidConnectionChecker</valid-connection-checker-class-name>
    <track-connection-by-tx />
    <!-- corresponding type-mapping in conf/standardjbosscmp-jdbc.xml -->
    <metadata>
      <type-mapping>PostgreSQL 8.0</type-mapping>
    </metadata>
  </xa-datasource>
  
